#!/bin/bash
z(){ tput setab $1;tput setaf $1;};tput sgr0;printf "`tty`, `tset -q`, $([ -n '$COLORTERM' ]&&echo $COLORTERM||echo $(tput colors) colors)\n"; [ -z "$NOUTF" ] && printf "🄈 ‰ ▮│☢☕│🀄🀆🂠🂩🂿🃏🃟🃠│🗦 🗀 🖂 🖫  🖺 🗧│⠠⣔│嗿⺂⾡⿲㉴⹓𠂔!│🖂🖃🖄🖅🖆🖉│🗴🗵🗸🗹│🙵🢔\n➆ ‱ □│🗸😈│🯁🯂🯃⌨   î│ 𝐔𝑛𝒊𝒸𝓸𝔡𝕖 𝖎𝗌 𝗵𝘦𝙧𝚎: 𝚶𝜐𝜯𝝫—𝟠 \n";tput sgr0;for f in {0..1};do for i in {0..7};do i=$(($i+8*$f));z $i;printf '..';done;tput sgr0;(($f))&&printf "<base16    6x6x6 cube    gray24>"||printf " ╺═╾─┄  Colour banchmark  ┄─╼═╸ ";for i in {0..11};do i=$(($i+232+12*$f));z $i;printf '..';done;tput sgr0;printf \\n;done;for i in {0..5};do for j in {0..5};do for k in {0..5};do k=$(($k+16+36*$j+6*$i));z $k;printf '..';done;tput sgr0;done;printf \\n;done;

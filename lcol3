#!/bin/bash
tput sgr0;printf "`tty`, $TERM, `tput colors` colors\n";for f in {0..1};do for i in {0..7};do i=$(($i+8*$f));printf "`tput setab $i``tput setaf $i`..";done;tput sgr0;(($f))&&printf "<base16    6x6x6 cube    gray24>"||printf " ╺━╾─┄┈ Colour banchmark ┈┄─╼━╸ ";for i in {0..11};do i=$(($i+232+12*$f));printf "`tput setab $i``tput setaf $i`..";done;tput sgr0;printf \\n;done;for i in {0..5};do for j in {0..5};do for k in {0..5};do k=$(($k+16+36*$j+6*$i));printf "`tput setab $k``tput setaf $k`..";done;tput sgr0;done;printf \\n;done;